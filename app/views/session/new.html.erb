<h2 align="center"> Log in</h2>

<%= form_for(:session, :html => { class: "form-horizontal", role: "form"}, url: login_path) do  |f|%>

<div class="form-group">
<div class="col-sm-offset-1 control-label col-sm-2">
<%= f.label :email %>
</div>
<div class="col-sm-9">
<%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter email" %>
</div>
</div>


<div class="form-group">
<div class="col-sm-offset-1 control-label col-sm-2">
<%= f.label :password %>
</div>
<div class="col-sm-9">
<%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter a password" %>
</div>
</div>


<div class="form-group">
<div class="col-sm-offset-5 col-sm-7">
  <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>

<%= link_to " Cancel ", root_path , class: "btn btn-primary btn-lg"%>
</div>
</div>

<% end %>
