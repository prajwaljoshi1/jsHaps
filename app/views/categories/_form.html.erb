<% if @category.errors.any? %>
   <%= render 'shared/errors', obj: @category %>
<% end %>

<div class="row">
  <div class="col-md-12">

    <%= form_for(@category, :html => { class: "form-horizontal", role: "form"}) do  |f|%>

  <div class="form-group">
    <div class="col-sm-offset-1 control-label col-sm-2">
      <%= f.label :name %>
    </div>
    <div class="col-sm-9">
    <%= f.text_field :name, class:"form-control", placeholder: "Enter a Category", autofocus: true %>
    </div>
  </div>


<div class="form-group">
  <div class="col-sm-offset-5 col-sm-7">
    <%  if @category.new_record? %>
      <%= f.submit "Add a Category", class: "btn btn-primary btn-lg" %>
    <%else%>
      <%= f.submit "Update account", class: "btn btn-primary btn-lg" %>
    <% end  %>
  <%= link_to " Cancel ", root_path , class: "btn btn-primary btn-lg"%>
  </div>
</div>

<% end %>

</div>
</div>
