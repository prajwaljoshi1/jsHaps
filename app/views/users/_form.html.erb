<% if @user.errors.any? %>
   <%= render 'shared/errors', obj: @user %>
<% end %>

<div class="row">
  <div class="col-md-12">

    <%= form_for(@user, :html => { class: "form-horizontal", role: "form"}) do  |f|%>

  <div class="form-group">
    <div class="col-sm-offset-1 control-label col-sm-2">
      <%= f.label :username %>
    </div>
    <div class="col-sm-9">
    <%= f.text_field :username, class:"form-control", placeholder: "Enter a username", autofocus: true %>
    </div>
  </div>

<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-2">
    <%= f.label :email %>
  </div>
  <div class="col-sm-9">
  <%= f.email_field :email, rows: 10, class: "form-control", placeholder: "Enter email" %>
  </div>
</div>


<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-2">
    <%= f.label :password %>
  </div>
  <div class="col-sm-9">
  <%= f.password_field :password, rows: 10, class: "form-control", placeholder: "Enter a password" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-1 control-label col-sm-2">
    <%= f.label :password_confirmation %>
  </div>
  <div class="col-sm-9">
  <%= f.password_field :password_confirmation, rows: 10, class: "form-control", placeholder: "Enter password again" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-5 col-sm-7">
    <%  if @user.new_record? %>
      <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
    <%else%>
      <%= f.submit "Update account", class: "btn btn-primary btn-lg" %>
    <% end  %>
  <%= link_to " Cancel ", root_path , class: "btn btn-primary btn-lg"%>
  </div>
</div>

<% end %>

</div>
</div>
