<h2 align="center"> All registered users</h2>


<div align="center">
  <%= will_paginate %>
<% @users.each do |user|  %>
<ul class="user-list">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
            <li>
              <%= link_to user.username, user_path(user) %>
            </li>
            <li>
              <small><%= pluralize(user.articles.count, "article") %></small>
                </li>
              <% if logged_in? && current_user.admin? %>
                    <li> <%= link_to "Delete this User", user_path(user), method: :delete, data: { confirm:" Are you sure you want to delete the user and all their artiles?"} %></li>
              <% end  %>

        </div>
      </div>
</ul>
<% end %>
<%= will_paginate %>
</div>
